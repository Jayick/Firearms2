<configs>
	<append xpath="/buffs">
		<buff name="buffCorrosiveRound" name_key="Poisoned" description_key="Poison your enemies" tooltip_key="Poison">
			<damage_type value="radiation"/>
			<stack_type value="replace"/>
			<duration value="30"/>
			<update_rate value="1"/>
			<effect_group>
				<triggered_effect trigger="onSelfBuffStart" action="AttachPrefabToEntity" prefab="#@modfolder:Resources/Test.unity3d?CorrosiveShot" local_offset="0,0.3,0" parent_transform="Hips"/>
				<triggered_effect trigger="onSelfBuffFinish" action="RemovePrefabFromEntity" target="self" parent_transform="Hips" prefab="#@modfolder:Resources/Test.unity3d?CorrosiveShot"/>
				<triggered_effect trigger="onSelfDied" action="RemovePrefabFromEntity" target="self" parent_transform="Hips" prefab="#@modfolder:Resources/Test.unity3d?CorrosiveShot"/>
				<passive_effect name="HealthChangeOT" operation="base_subtract" duration="5,15,30" value="5,10,15"/>
					
			</effect_group>
		</buff>
		<buff name="buffExplosiveRound" name_key="Poisoned" description_key="Poison your enemies" tooltip_key="Poison">
			<damage_type value="disease"/>
			<stack_type value="replace"/>
			<duration value="1"/>
			<effect_group><!-- Need to fix this. It's annoying. Can't turn off the particles, and they run every .2 seconds
				<triggered_effect trigger="onSelfBuffStart" action="AttachParticleEffectToEntity" particle="#@modfolder:Resources/Test.unity3d?ExplosiveShotParticle" local_offset="0,0.3,0" parent_transform="Hips"/>
				<triggered_effect trigger="onSelfBuffFinish" action="RemoveParticleEffectFromEntity" target="otherAOE" particle="#@modfolder:Resources/Test.unity3d?ExplosiveShotParticle" parent_transform="Hips" local_offset="0,0.3,0"/>
				<triggered_effect trigger="onSelfBuffUpdate" action="RemoveParticleEffectFromEntity" particle="#@modfolder:Resources/Test.unity3d?ExplosiveShotParticle">
					<requirement name="NotHasBuff" buff="buffExplosiveRound"/>
					</triggered_effect>-->
				<passive_effect name="HealthChangeOT" operation="base_subtract" value="50" duration="0"/>
			</effect_group>
		</buff>
		<buff name="buffIncendiaryRound" name_key="Poisoned" description_key="Poison your enemies" tooltip_key="Poison">
			<damage_type value="disease"/>
			<stack_type value="replace"/>
			<duration value="15"/>
			<effect_group>
			<requirement name="EntityTagCompare" target="self" tags="zombie"/>
				<triggered_effect trigger="onSelfBuffStart" action="AddBuff" target="self" buff="buffBurning"/>
				<triggered_effect trigger="onSelfBuffUpdate" action="AddBuff" target="otherAOE" range="1" buff="buffIncendiaryRound"/>
					
				
				<passive_effect name="HealthChangeOT" operation="base_subtract" duration="5,15" value="5,8"/>
			</effect_group>
		</buff>
	</append>
</configs>
		
