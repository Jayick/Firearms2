<configs>
	<append xpath="/buffs">
		<buff name="buffCorrosiveRound">
			<damage_type value="radiation"/>
			<stack_type value="replace"/>
			<duration value="30"/>
			<update_rate value="1"/>
			<effect_group>
				<triggered_effect trigger="onSelfBuffStart" action="AttachPrefabToEntity" prefab="#@modfolder:Resources/Test.unity3d?CorrosiveShot" local_offset="0,0.3,0" parent_transform="Hips"/>
				<triggered_effect trigger="onSelfBuffFinish" action="RemovePrefabFromEntity" target="self" parent_transform="Hips" prefab="#@modfolder:Resources/Test.unity3d?CorrosiveShot"/>
				<triggered_effect trigger="onSelfDied" action="RemovePrefabFromEntity" target="self" parent_transform="Hips" prefab="#@modfolder:Resources/Test.unity3d?CorrosiveShot"/>
				<passive_effect name="HealthChangeOT" operation="base_subtract" duration="5,15,30" value="5,10,15"/>
					
			</effect_group>
		</buff>
		<buff name="buffExplosiveRound">
			<damage_type value="disease"/>
			<stack_type value="replace"/>
			<duration value="1"/>
			<effect_group><!--
				<triggered_effect trigger="onSelfBuffStart" action="AttachPrefabToEntity" prefab="#@modfolder:Resources/Test.unity3d?ExplosiveShot" local_offset="0,0.3,0" parent_transform="Hips"/>
				<triggered_effect trigger="onSelfBuffFinish" action="RemovePrefabFromEntity" target="self" parent_transform="Hips" prefab="#@modfolder:Resources/Test.unity3d?ExplosiveShot"/>
				<triggered_effect trigger="onSelfDied" action="RemovePrefabFromEntity" target="self" parent_transform="Hips" prefab="#@modfolder:Resources/Test.unity3d?ExplosiveShot"/>-->
				<triggered_effect trigger="onSelfBuffStart" action="AddBuff" target="selfAOE" range="1" buff="buffExplosiveRoundAOE"/>
				<passive_effect name="HealthChangeOT" operation="base_subtract" value="85"/>
			</effect_group>
		</buff>
		<buff name="buffExplosiveRoundAOE">
			<damage_type value="disease"/>
			<stack_type value="replace"/>
			<duration value="1"/>
			<effect_group>
				<passive_effect name="HealthChangeOT" operation="base_subtract" value="40"/>
			</effect_group>
		</buff>
		<buff name="buffIncendiaryRound" >
			<damage_type value="disease"/>
			<stack_type value="replace"/>
			<duration value="15"/>
			<effect_group>
			<requirement name="EntityTagCompare" target="self" tags="zombie"/>
				<triggered_effect trigger="onSelfBuffStart" action="AddBuff" target="self" buff="buffBurning"/>
				<triggered_effect trigger="onSelfBuffStart" action="AddBuff" target="selfAOE" range="1" buff="buffIncendiaryRound"/>
					
				
				<passive_effect name="HealthChangeOT" operation="base_subtract" duration="5,15" value="10,20"/>
			</effect_group>
		</buff>
	</append>
</configs>
		